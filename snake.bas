10 REM SNAKE GAME
20 WIDTH 40
30 RANDOMIZE TIMER
40 DIM X(100),Y(100)
50 L=5
60 X=20: Y=12
70 FOR I=1 TO L: X(I)=X: Y(I)=Y: NEXT I
80 DX=1: DY=0
90 GOSUB 2000
100 GOSUB 3000
110 K$=INKEY$
120 IF K$<>"" THEN GOSUB 4000
130 X=X+DX: Y=Y+DY
140 IF X=0 OR X=40 OR Y=0 OR Y=24 THEN GOTO 9000
150 FOR I=L TO 2 STEP -1
160 X(I)=X(I-1): Y(I)=Y(I-1)
170 NEXT I
180 X(1)=X: Y(1)=Y
190 LOCATE Y(1),X(1): PRINT "O";
200 LOCATE Y(L),X(L): PRINT " ";
210 IF X=FX AND Y=FY THEN L=L+1: X(L)=X: Y(L)=Y: GOSUB 3000
220 FOR I=2 TO L: IF X=X(I) AND Y=Y(I) THEN GOTO 9000
230 NEXT I
240 FOR T=1 TO 100: NEXT T
250 GOTO 110
3000 FX=INT(RND*38)+1: FY=INT(RND*23)+1: LOCATE FY,FX: PRINT "*";: RETURN
4000 IF K$="w" AND DY<>1 THEN DX=0: DY=-1
401 IF K$="s" AND DY<>-1 THEN DX=0: DY=1
402 IF K$="a" AND DX<>1 THEN DX=-1: DY=0
403 IF K$="d" AND DX<>-1 THEN DX=1: DY=0
404 RETURN
2000 CLS: FOR I=0 TO 40: LOCATE 0,I: PRINT "#";: LOCATE 24,I: PRINT "#";: NEXT I
2001 FOR J=0 TO 24: LOCATE J,0: PRINT "#";: LOCATE J,40: PRINT "#";: NEXT J
2002 RETURN
9000 CLS: PRINT "GAME OVER": END
